<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo6"
    tools:context=".Camara">

    <ImageButton
        android:id="@+id/salir_video"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/volver"
        android:onClick="irInicio"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageng"
        app:layout_constraintVertical_bias="0.918" />

    <ImageView
        android:id="@+id/imageng"
        android:layout_width="339dp"
        android:layout_height="366dp"
        android:layout_marginTop="108dp"
        android:src="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/camaras"
        android:layout_width="109dp"
        android:layout_height="110dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/camara"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageng" />
</androidx.constraintlayout.widget.ConstraintLayout>